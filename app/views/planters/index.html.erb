<div class="container">
  <h1 class="text-center mt-4 mb-4">Planters</h1>

  <div class="table-responsive">
    <table class="table table-striped table-sm text-center">
      <thead class="thead-dark">
        <tr>
          <th>Planter Id</th>
          <th>Name</th>
          <th>Address</th>
          <th>Mobile Number</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <%= render @planters %>
      </tbody>
    </table>
  </div>

  <div class="mt-3 d-flex justify-content-center">
    <%= paginate @planters, previous_label: 'Previous', next_label: 'Next', class: 'btn btn-outline-primary' %>
  </div>

  <%= link_to "New Planter", new_planter_path, class: 'btn btn-success mt-3' %>
</div>
