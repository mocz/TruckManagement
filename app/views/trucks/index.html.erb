<div class="container">
  <h1 class="text-center mt-4 mb-4">Trucks</h1>

  <div class="table-responsive">
    <table class="table table-striped table-sm text-center">
      <thead class="thead-dark">
        <tr>
          <th>Truck ID</th>
          <th>License Plate</th>
          <th>Capacity</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @trucks.each do |truck| %>
          <tr>
            <td><%= truck.id %></td>
            <td><%= truck.license_plate %></td>
            <td><%= truck.capacity %></td>
            <td class="text-nowrap">
              <%= link_to 'Show', truck, class: 'btn btn-primary btn-sm' %>
              <%= link_to 'Edit', edit_truck_path(truck), class: 'btn btn-secondary btn-sm' %>
              <%= link_to 'Delete', truck, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-3 d-flex justify-content-center">
    <div class="btn-group" role="group" aria-label="Pagination">
      <%= paginate @trucks, previous_label: 'Previous', next_label: 'Next', class: 'btn btn-outline-primary' %>
    </div>
  </div>

  <%= link_to 'New Truck', new_truck_path, class: 'btn btn-success mt-3' %>
</div>