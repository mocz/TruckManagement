<div class="container">
  <h1 class="text-center mt-4 mb-4">Drivers</h1>

  <div class="table-responsive">
    <table class="table table-striped table-sm text-center">
      <thead class="thead-dark">
        <tr>
          <th>Driver ID</th>
          <th>Name</th>
          <th>License Number</th>
          <th>Contact Number</th>
          <th>Address</th>
          <th>Birthdate</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @drivers.each do |driver| %>
          <tr>
            <td><%= driver.id %></td>
            <td><%= driver.name %></td>
            <td><%= driver.license_number %></td>
            <td><%= driver.contact_number %></td>
            <td><%= driver.address %></td>
            <td><%= driver.birthdate %></td>
            <td><%= driver.status %></td>
            <td class="text-nowrap">
              <%= link_to 'Show', driver, class: 'btn btn-primary btn-sm' %>
              <%= link_to 'Edit', edit_driver_path(driver), class: 'btn btn-secondary btn-sm' %>
              <%= link_to 'Delete', driver, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-3 d-flex justify-content-center">
    <div class="btn-group" role="group" aria-label="Pagination">
      <%= paginate @drivers, previous_label: 'Previous', next_label: 'Next', class: 'btn btn-outline-primary' %>
    </div>
  </div>

  <%= link_to 'New Driver', new_driver_path, class: 'btn btn-success mt-3' %>
</div>