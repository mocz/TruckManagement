<div class="container">
  <h1 class="text-center mt-4 mb-4">Locations</h1>

  <div class="table-responsive">
    <table class="table table-striped table-sm text-center">
      <thead class="thead-dark">
        <tr>
          <th>Location ID</th>
          <th>Barangay</th>
          <th>Town</th>
          <th>Area Code</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @locations.each do |location| %>
          <tr>
            <td><%= location.id %></td>
            <td><%= location.barangay %></td>
            <td><%= location.town %></td>
            <td><%= location.area_code %></td>
            <td class="text-nowrap">
              <%= link_to 'Show', location, class: 'btn btn-primary btn-sm' %>
              <%= link_to 'Edit', edit_location_path(location), class: 'btn btn-secondary btn-sm' %>
              <%= link_to 'Delete', location, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-3 d-flex justify-content-center">
    <div class="btn-group" role="group" aria-label="Pagination">
      <%= paginate @locations, previous_label: 'Previous', next_label: 'Next', class: 'btn btn-outline-primary' %>
    </div>
  </div>

  <%= link_to 'New Location', new_location_path, class: 'btn btn-success mt-3' %>
</div>
